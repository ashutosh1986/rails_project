<div class="btn pull-right">
  <%= button_to "Refresh", microbreweries_path, :class => "btn btn-primary btn-sm",:method => :get %>
</div>
<div class="container" style="margin-top: 3em;">
  <div class="row">
    <div class="col-xs-14">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"><strong>Microbreweries </strong></h3>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-bordered table-hover">
            <tbody>
            <tr>
              <th>Thumb Image</th>
              <th>Name</th>

            </tr>
            <% @result.each do |restaurant| %>
                <tr>
                  <td> <%= image_tag(restaurant[0],:class =>"img-rounded")%></td>
                  <td> <%= link_to restaurant[1], microbrewery_path(restaurant[1]) %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div><!-- /.box-body -->

      </div><!-- /.box -->
    </div>
  </div>
</div>

<div class="container">
  <%= will_paginate @result,renderer: BootstrapPagination::Rails %>
</div>
