<div class="container" style="margin-top: 3em;">
  <div class="row">
    <div class="col-xs-14">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"><strong>Microbreweries </strong></h3>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-bordered table-hover">
            <tbody>
            <tr>
              <th>Resturant Name</th>
            </tr>
            <% @doc.each do |restaurant| %>
                <tr>
                  <td> <%= link_to restaurant[:name], scrap_path(restaurant[:name])%></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div><!-- /.box-body -->

      </div><!-- /.box -->
    </div>
  </div>
</div>

