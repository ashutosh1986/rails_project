<% provide(:title, "Search") %>
<div class="container">
  <form name="input" action="/users" method="get">
    <div id="panel">
      <h3 style="margin-top: 0em;">Search</h3>
      <div class="row">
        <div class="col-md-2 col-sm-4 col-xs-6" style="margin-bottom: 0.5em;">
          <label>Name</label>
          <input type="text" name="name" class="form-control" value="<%= params[:name] %>">
        </div>

      </div>
      <div>
        <input type="submit" value="Submit" class="btn btn-success col-xs-4 col-md-2 col-sm-2" style="font-size: 18px;font-weight: bold;">
      </div>
    </div>
  </form>
</div>

<div class="container" style="margin-top: 3em;">
  <div class="row">
    <div class="col-xs-14">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title"><strong>Microbreweries </strong></h3>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-bordered table-hover">
            <tbody>
            <tr>
              <th>ID</th>
              <th>Name</th>

            </tr>
            <tr>
              <td> <%= 1%></td>
              <td> <%= "Ashutosh"%></td></tr>

            <tr>
              <td> <%= 2%></td>
              <td> <%= "Anirudh"%></td></tr>

            <tr>
              <td> <%= 3%></td>
              <td> <%= "Anirudh"%></td></tr>
            <tr>
              <td> <%= 4%></td>
              <td> <%= "Anirudh"%></td></tr>
            <tr>
              <td> <%= 5%></td>
              <td> <%= "Anirudh"%></td></tr>
            <tr>
              <td> <%= 6%></td>
              <td> <%= "Anirudh"%></td></tr>
            <tr>
              <td> <%= 7%></td>
              <td> <%= "Anirudh"%></td></tr>
            </tbody>
          </table>
        </div><!-- /.box-body -->

      </div><!-- /.box -->
    </div>
  </div>
</div>

<div class="container">
  <%= will_paginate @result %>
</div>
